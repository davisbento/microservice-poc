{
  "name": "api",
  "version": "0.0.0",
  "description": "API Gateway for Microservice POC",
  "author": "Davi S. Bento <contato@davisbento.dev>",
  "homepage": "https://github.com/davisbento/microservice-poc#readme",
  "license": "ISC",
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davisbento/microservice-poc.git"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nest start --watch",
    "prod": "NODE_ENV=production node dist/main.js",
    "lint": "eslint \"./src/**/*.ts\"",
    "test": "jest"
  },
  "dependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/common": "10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "10.3.0",
    "@nestjs/microservices": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "nest-winston": "^1.9.4",
    "reflect-metadata": "0.1.14",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "tslib": "2.6.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.3.0",
    "@types/amqplib": "^0.10.4",
    "@types/express": "4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.3",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "29.7.0",
    "prettier": "3.2.2",
    "supertest": "6.3.4",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "tsc-watch": "6.0.4",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}